@page
@model ChoreMgr.Pages.Chores.TransactionCreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Transaction</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Transaction.Name" class="control-label"></label>
                <input asp-for="Transaction.Name" class="form-control" />
                <span asp-validation-for="Transaction.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Transaction.Amount" class="control-label"></label>
                <input asp-for="Transaction.Amount" class="form-control" asp-format="{0:N0}"/>
                <span asp-validation-for="Transaction.Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Transaction.Category" class="control-label"></label>
                <input asp-for="Transaction.Category" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Transaction.Notes" class="control-label"></label>
                <input asp-for="Transaction.Notes" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Transaction.Timestamp" class="control-label"></label>
                <input asp-for="Transaction.Timestamp" class="form-control" asp-format="{0:yyyy-MM-ddTHH:mm}"/>
                <span asp-validation-for="Transaction.Timestamp" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="TransactionIndex">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
