@page
@model ChoreMgr.Pages.Chores.ChoreCreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Job</h4>
<hr />
<script type="text/javascript">
    function setInterval(days) {
        if (!isNaN(days))
            document.getElementById("Job_IntervalDays").value = days;
    }
</script>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Job.Name" class="control-label"></label>
                <input asp-for="Job.Name" class="form-control" />
                <span asp-validation-for="Job.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Job.Category" class="control-label"></label>
                <input asp-for="Job.Category" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Job.IntervalDays" class="control-label"></label>
                <input asp-for="Job.IntervalDays" class="form-control" />
                <span asp-validation-for="Job.IntervalDays" class="text-danger"></span>
            </div>
            <a href="javascript:setInterval(1);">Daily</a>
            <a href="javascript:setInterval(7);">Weekly</a>
            <a href="javascript:setInterval(14);">Fortnightly</a>
            <a href="javascript:setInterval(30);">Monthly</a>
            <a href="javascript:setInterval(90);">Quarterly</a>
            <a href="javascript:setInterval(365);">Yearly</a>
            <div class="form-group">
                <label asp-for="Job.LastDone" class="control-label"></label>
                <input asp-for="Job.LastDone" class="form-control" />
                <span asp-validation-for="Job.LastDone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="ChoreIndex">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
