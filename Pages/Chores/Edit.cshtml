@page
@model ChoreMgr.Pages.Chores.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Chore ID:@Model.Chore.Id</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Chore.Id" />
            <div class="form-group">
                <label asp-for="Chore.Name" class="control-label"></label>
                <input asp-for="Chore.Name" class="form-control" />
                <span asp-validation-for="Chore.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Interval (days)</label>
                <input asp-for="Chore.IntervalDays" class="form-control" />
                <span asp-validation-for="Chore.IntervalDays" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Last Done</label>
                <input asp-for="Chore.LastDone" class="form-control" />
                <span asp-validation-for="Chore.LastDone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Chore.Journals[0].Updated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Chore.Journals[0].DoneDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Chore.Journals[0].Note)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Chore.Journals) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Updated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DoneDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Note)
            </td>
        </tr>
        }
    </tbody>
</table>

<div>
    <a asp-page-handler="Delete" asp-route-id="@Model.Chore.Id">Delete</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
